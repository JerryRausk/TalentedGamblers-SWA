{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist",
    "rootDir": ".",
    "sourceMap": true,
    "strict": false,
    "skipLibCheck": true,
    "composite": true,
    "types": ["vitest/globals"]
  },
  "include": ["./src/**/*.ts", "./tests/**/*.spec.ts"],
  "paths": {
    "@/*": ["./src/*"],
    "types/*": ["./src/types/*"]
  }
}